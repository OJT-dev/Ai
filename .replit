modules = ["nodejs-20", "python-3.12:v20-20240117-0bd73cd"]

# Main run commands - using a startup script to run both backend and frontend
run = ["sh", "-c", "cd life_management_agency && npm install && npm run dev & python -m life_management_agency.agency"]

# Development environment configuration
[env]
PYTHONPATH = "${PYTHONPATH}:${HOME}"
PORT = "3000"
NEXT_PUBLIC_API_URL = "http://localhost:5000"

# Nix configuration
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
run = ["sh", "-c", "cd life_management_agency && npm run build && npm start"]
buildCommand = """
pip install -r requirements.txt
cd life_management_agency && npm install && npm run build
"""
ignorePorts = false
deploymentTarget = "cloudrun"

# Configure ports
[deployment.ports]
# Frontend port
localPort = 3000
externalPort = 3000

# Backend port
[[ports]]
localPort = 5000
externalPort = 5000

# Language configurations
[languages]

[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"
syntax = "typescript"

[languages.javascript]
pattern = "**/{*.js,*.jsx}"
syntax = "javascript"
